@model IEnumerable<LibrarySystem.Models.UserModel>

@{
    ViewData["Title"] = "View All Users";
}

<h1> View All Users </h1>

<table class="table">
    <tr>

        <th> First Name </th>
        <th> Last Name </th>
        <th> Email </th>
    </tr>

    @foreach(UserModel user in Model)
    {
        <tr> 
            <td>@user.FirstName </td>
            <td>@user.LastName </td>
            <td>@user.Email </td>
            <td> <a asp-action="ViewUser" asp-route-id="@user.Id">View User</a> </td>
        </tr>
    }
    
</table>